      <!-- Main Content Area -->
      <div class="col-md-9 content">
        <!-- Product Details Section -->
        <div class="container mt-4" >
          <h2>Product</h2>
          <h6>Edit Product</h6>
          <form>
            <!-- First Line -->
            <div class="form-group ">
              <label for="productName">Name</label>
              <input type="text" class="form-control " id="productName">
            </div>
            
            <!-- Second Line -->
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="productCategory">Category</label>
                <select class="form-control" id="productCategory">
                  <option value="option1">Option 1</option>
                  <option value="option2">Option 2</option>
                  <!-- Add more options as needed -->
                </select>
              </div>
              <div class="form-group col-md-4">
                <label for="productColor">Color</label>
                <input type="text" class="form-control" id="productColor">
              </div>
              <div class="form-group col-md-4">
                <label for="productPrice">Price</label>
                <input type="text" class="form-control" id="productPrice">
              </div>
            </div>
            
            <!-- Third Line -->
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="productSize">Size</label>
                <input type="text" class="form-control" id="productSize">
              </div>
              <div class="form-group col-md-4">
                <label for="productMaterial">Material</label>
                <input type="text" class="form-control" id="productMaterial">
              </div>
              <div class="form-group col-md-4">
                <label for="productWashcare">Washcare</label>
                <input type="text" class="form-control" id="productWashcare">
              </div>
            </div>
            
            <!-- Fourth Line -->
            <div class="form-group">
              <label for="productOccasion">Occasion</label>
              <input type="text" class="form-control" id="productOccasion">
            </div>
            
            <!-- Fifth Line -->
            <div class="form-group">
              <label for="productSpecification">Specification</label>
              <input type="text" class="form-control" id="productSpecification">
            </div>
            
            <!-- Sixth Line -->
            <div class="form-row">
              <div class="form-group col-md-8">
                <label for="productPhoto">Photo</label>
                <div class="uploaded-photos">
                    <div class="row">
                      <div class="col-sm-4 mb-2">
                        <img src="/images/01,1.jpg" alt="Uploaded Photo 1" class="img-fluid">
                        <!-- Add any additional content or styling for each uploaded photo -->
                      </div>
                      <div class="col-sm-4 mb-2">
                        <img src="/images/01,2.jpg" alt="Uploaded Photo 2" class="img-fluid">
                        <!-- Add any additional content or styling for each uploaded photo -->
                      </div>
                      <div class="col-sm-4 mb-2">
                        <img src="/images/01,3.jpg" alt="Uploaded Photo 3" class="img-fluid">
                        <!-- Add any additional content or styling for each uploaded photo -->
                      </div>
                    </div>
                  </div>
                <div class="input-group">
                  <input type="file" class="form-control-file" id="productPhoto">
                  <div class="input-group-append">
                    <button class="btn btn-secondary " style="margin-top: 20px;" type="button">Upload</button>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Save Button -->
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
          
           
          
        </div>
      </div>
    </div>
  </div>

