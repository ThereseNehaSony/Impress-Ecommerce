<%- include('header')-%>

<section class="vh-100">
  <div class="container h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-5 col-xl-4">
        <!-- Adjusted the column size -->
        <img src="/images/login-removebg-preview.png" class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-5 offset-lg-1">
        <!-- Adjusted the column size and added offset -->
        <form action="/signup" method="POST">
          <div class="divider d-flex align-items-center my-3">
            <h2>Signup Here</h2>
          </div>
          <% if (typeof error !== 'undefined' && error !== null) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example3">Full Name</label>
            <input type="text" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter Full Name" name="fullname"/>
          </div>
          <!-- Email input -->
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example3">Email address</label>
            <input type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter email" name="email" />
          </div>
          <!-- Password input -->
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example4">Password</label>
            <input type="password" id="form3Example4" class="form-control form-control-lg"
              placeholder="Enter password" name="password"/>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">I agree to Terms and Conditions</label>
            </div>
            <div class="text-center text-lg-start mt-3 pt-2">
              <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2rem; padding-right: 2rem;">Signup</button>
            </div>
          </div>
        </form>
        <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account? <a href="/login" class="link-danger">Login</a></p>
        <p>or sign up with:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
          <i class="fa fa-facebook" aria-hidden="true"></i>
        </button>
        <button type="button" class="btn btn-link btn-floating mx-1">
          <i class="fa fa-google" aria-hidden="true"></i>
        </button>
        <button type="button" class="btn btn-link btn-floating mx-1">
          <i class="fa fa-twitter"></i>
        </button>
      </div>
    </div>
  </div>
</section>

<%- include('footer') -%>
