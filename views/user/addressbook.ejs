  <script>
    $(document).ready(function () {

        document.getElementById('addAddressIcon').addEventListener('click', function () {
            var myModal = new bootstrap.Modal(document.getElementById('staticBackdrop'));
            myModal.hide();
            myModal.show();
        });

        $('#addressForm').submit(function (event) {
            event.preventDefault();

            // Reset previous error messages
            resetErrorMessages();

            //address validation
            const name = document.getElementById('name').value.trim();
            const addressline = document.getElementById('address').value.trim();
            const pincode = document.getElementById('pincode').value.trim();
            const street = document.getElementById('street').value.trim();
            const city = document.getElementById('city').value.trim();
            const state = document.getElementById('state').value.trim();
            const mobile = document.getElementById('mobile').value.trim();

            // Check if any field is empty
            if (!name || !addressline || !pincode || !street || !city || !state || !mobile) {
                showError('All fields are required. Please fill in all details.', 'errorMessage');
                return;
            }

            
            // Validate pin code (6 digits)
            if (!/^\d{6}$/.test(pincode)) {
                showError('Please enter a valid 6-digit pin code.', 'pincodeError');
                return;
            }

            // Validate mobile number (10 digits)
            if (!/^\d{10}$/.test(mobile) || /^(0+)$/.test(mobile)) {
    showError('Please enter a valid 10-digit non-zero mobile number.', 'mobileError');
    return;
}

            const formData = $(this).serialize();
            $.post('/addaddress', formData)
                .done(function (response) {
                    console.log(response.message);
                    $('#successMessage').text(response.message);
                    $('#staticBackdrop').modal('hide');
                    location.reload();
                })
                .fail(function (error) {
                    console.error('Error:', error.responseJSON.error);
                });
        });
    });

    // Function to show error messages
    function showError(message, errorId) {
        const errorElement = document.getElementById(errorId || 'errorMessage');
        errorElement.innerText = message;
        errorElement.style.display = 'block';
    }

    // Function to reset error messages
    function resetErrorMessages() {
        const errorElements = document.querySelectorAll('.text-danger');
        errorElements.forEach(function (element) {
            element.innerText = '';
            element.style.display = 'none';
        });
    }
</script>



    <script>
        
        $(document).ready(function () {
            var editAddressModal = new bootstrap.Modal(document.getElementById('editAddressModal'));
        $('.editAddressButton').on('click', function (event) {
        event.preventDefault(); // Prevent the default behavior of the anchor tag

        // Get the address ID from the data-addressid attribute
        const addressId = $(this).data('addressid');

        // Fetch address details using AJAX
        $.ajax({
            type: 'GET', // Use the appropriate HTTP method for fetching address details
            url: `/getaddress/${addressId}`, // Replace with your server route to get address details
            success: function (data) {
                console.log('Fetched data:', data);
                // Populate the form fields in the editAddressModal with the fetched address details
                $('#editAddressForm input[name="name"]').val(data.name);
                $('#editAddressForm input[name="street"]').val(data.street);
               
                editAddressModal.show();
            },
            error: function (error) {
                console.error('Error:', error);
                // Handle error if needed
            }
        });
    });



   
    $('.removeButton').on('click', function (event) {
        event.preventDefault(); 

       
        const addressId = $(this).data('addressid');

     
        $.ajax({
            type: 'DELETE', 
            url: `/removeAddress/${addressId}`, 
            success: function (data) {
              
                const removedCard = $(`.removeButton[data-addressid='${addressId}']`).closest('.card').parent();
                removedCard.remove();

                
                Swal.fire({
                    icon: 'success',
                    title: 'Address Removed!',
                    text: 'The address has been successfully removed.',
                });
            },
            error: function (error) {
                console.error('Error:', error);
              
            }
        });
    });
});

    </script>
    
  
