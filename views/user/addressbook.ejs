<script>

  document.getElementById('addAddressIcon').addEventListener('click', function () {
   
      var myModal = new bootstrap.Modal(document.getElementById('staticBackdrop'));
      myModal.hide();
   
      myModal.show();
  });

  $(document).ready(function() {
 
    $(document).on('click', '.editButton', function (event) {
        event.preventDefault();
        var addressId = $(this).data('addressid'); 

        $('#editAddressModal').modal('show');
    });
});


</script>
<script>
$(document).ready(function() {
    $(document).on('click', '.removeButton', function (event) {
        event.preventDefault();
        var addressId = $(this).data('addressid');

        var removeAddressURL = '/removeAddress/'+ addressId;

        $.ajax({
            url: removeAddressURL,
            type: 'DELETE',
            success: function(response) {
                
                console.log('Address removed successfully');
                Swal.fire({
                    icon: 'success',
                    title: 'Address Removed',
                    text: 'The address has been removed successfully.',
                }).then((result) => {
                    if (result.isConfirmed || result.isDismissed) {
                        location.reload(); 
                    }
                });
            },
            error: function(error) {
                console.error('Error removing address:', error);
                
            }
        });
    });
});
</script>
<script>
    $('#addressForm').submit(function(event) {
      event.preventDefault();
    
      const formData = $(this).serialize();
    
      $.post('/addaddress', formData)
        .done(function(response) {
          console.log(response.message);
          $('#successMessage').text(response.message);
    
          
          $('#staticBackdrop').modal('hide');
    
         
          location.reload();
        })
        .fail(function(error) {
          console.error('Error:', error.responseJSON.error);
        });
    });
    </script>