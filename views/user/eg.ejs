<div class="carousel-inner">
    <% for (let i = 0; i < banners.length; i++) { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <a href="/products/<%= banners[i].category.name %>" class="d-block w-100">
                <img src="/uploads/<%= banners[i].image %>" alt="Slide <%= i + 1 %>" style="object-fit: cover">
            </a>
        </div>
    <% } %>
</div>